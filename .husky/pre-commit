#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Linting Solidity contracts..."
npx solhint 'contracts/**/*.sol' || exit 1

# Compile contracts
echo "🔨 Compiling contracts..."
npx hardhat compile || exit 1

# Run tests
echo "🧪 Running tests..."
npm test || exit 1

echo "✅ All pre-commit checks passed!"